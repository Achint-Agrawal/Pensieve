{
  "manifest_version": 3,
  "name": "Pensieve",
  "description": "Pensieve Chrome Extension.",
  "version": "0.0.7",
  "icons": {
    "16": "icons/Pensieve16.png",
    "32": "icons/Pensieve32.png",
    "48": "icons/Pensieve48.png",
    "128": "icons/Pensieve128.png"
  },
  "action": {
    "default_title": "Pensieve",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/Pensieve16.png",
      "32": "icons/Pensieve32.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["src/chatgpt/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://teams.microsoft.com/*"],
      "js": ["src/teams/content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://api.mem0.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "http://localhost:8000/*",
    "https://login.microsoftonline.com/*",
    "https://graph.microsoft.com/*",
    "https://teams.microsoft.com/*"
  ],
  "oauth2": {
    "client_id": "04437958-7157-44e1-9c0f-d8a56f6a3b1d",
    "scopes": [
      "openid",
      "profile",
      "email",
      "https://graph.microsoft.com/User.Read"
    ]
  }
}
